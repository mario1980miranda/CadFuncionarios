                                @Html.EditorFor(model => model.sobre_nome, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.sobre_nome, "", new { @class = "text-danger" })
                            </div>
                        </div>

